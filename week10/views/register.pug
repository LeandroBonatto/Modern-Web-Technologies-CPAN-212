extends layout

block content 
    if errors
        each error in errors 
        p(style="color:red") #{error.msg}
        h1 Register

    form(method="POST")
        #form-group 
            label Name:
            input.form-control(name="name", type="text")

        #form-group 
            label Email:
            input.form-control(name="email", type="text")

        #form-group 
            label Passaword:
            input.form-control(name="password", type="number")

    
        input.form-control(type="submit", value="Submit")
