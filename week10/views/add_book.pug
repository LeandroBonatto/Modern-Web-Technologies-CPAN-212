extends layout

block content 
    if errors
    for error in errors 
        p(style="color:red") #{error.msg}
    h1 Add book

    form(method="POST")
    #form-group 
        label Title:
        input.form-control(name="title", type="text")

    #form-group 
        label Author:
        input.form-control(name="author", type="text")

    #form-group 
        label Pages:
        input.form-control(name="pages", type="number")

    #form-group 
    label Rating:
    input.form-control(name="rating", type="number")

    #form-group 
        label Genres:
        for genre in genres
            input.form-control(name="genres", type="checkbox" value=genre)
            label= genre
    
    input.form-control(type="submit", value="Submit")
